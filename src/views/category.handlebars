<div class="intro" style="background-image: url(/static/images/bg3.jpg);">
    <div class="dtable hw100">
        <div class="dtable-cell hw100">
            <div class="container text-center">
                <h1 class="intro-title animated fadeInDown"> Search Catalog</h1>
                <p class="sub animateme fittext3 animated fadeIn"> Easily search for an item </p>
                <form action="/category" method="GET" class="row search-row animated fadeInUp">
                    <div class="col-lg-8 col-sm-8 search-col relative"><i class="icon-docs icon-append"></i>
                        <input type="text" name="query" class="form-control has-icon" placeholder="I'm looking for a ..." value="">
                        <input type="hidden" name="code" value="{{category.code}}" />
                    </div>
                    <div class="col-lg-4 col-sm-4 search-col">
                        <button type="submit" class="btn btn-primary btn-search btn-block"><i class="icon-search"></i><strong>Find</strong></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-sm-3 page-sidebar mobile-filter-sidebar">
                <aside>
                    <div class="inner-box">
                        <div class="categories-list  list-filter">
                            <h5 class="list-title"><strong><a href="#">Sub Categories</a></strong></h5>
                            <ul class=" list-unstyled">
                                {{#each category.subCategories as |categoryValue categoryKey|}}
                                <li><a href="#"><span class="title">{{categoryValue.name}}</span><span class="count">&nbsp;{{categoryValue.count}}</span></a></li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="locations-list  list-filter">
                            <h5 class="list-title"><strong><a href="#">Price range</a></strong></h5>
                            <form role="form" class="form-inline ">
                                <div class="form-group col-sm-4 no-padding">
                                    <input type="text" placeholder="R 2000 " id="minPrice" class="form-control">
                                </div>
                                <div class="form-group col-sm-1 no-padding text-center hidden-xs"> -</div>
                                <div class="form-group col-sm-4 no-padding">
                                    <input type="text" placeholder="R 3000 " id="maxPrice" class="form-control">
                                </div>
                                <div class="form-group col-sm-3 no-padding">
                                    <button class="btn btn-default pull-right btn-block-xs" type="button">GO
                                    </button>
                                </div>
                            </form>
                            <div style="clear:both"></div>
                        </div>
                        <div style="clear:both"></div>
                    </div>
                </aside>
            </div>
            <div class="col-sm-9 page-content col-thin-left">
                <div class="category-list">
                    {{#each items as |value key|}}
                    <div class="item-list">
                        <div class="col-sm-2 no-padding photobox">
                            <div class="add-image"><a href="/item?code={{value.code}}"><img class="thumbnail no-margin" src="http://via.placeholder.com/350x350" alt="img"></a></div>
                        </div>
                        <div class="col-sm-7 add-desc-box">
                            <div class="add-details">
                                <h5 class="add-title"><a href="/item?code={{value.code}}">{{value.name}}</a>
                                </h5>
                            </div>
                        </div>
                        <div class="col-sm-3 text-right  price-box">
                            <h2 class="item-price"> R {{value.price}} </h2>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="pagination-bar text-center">
                    <ul class="pagination">
                        {{#each pages as |value key|}}
                        <li><a href="/category?code={{@root.category.code}}&page={{value}}&query={{@root.query}}">{{value}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>