{
    "machine": {
        "host": "$host",
        "username": "$username",
        "password": "$password"
    },
    "commands": [
        "sudo apt-get update",
        "curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -",
        "sudo apt-get install -y nodejs",

        "npm --prefix /opt/frontosa-ui install",
        "docker stop frontosa-ui",
        "docker rm frontosa-ui",
        "docker build --no-cache -t frontosa-ui /docker-uploads/frontosa-ui",
        "docker run -d -p 8080:3000 --name frontosa-ui -v /logs:/logs -v /opt/frontosa-ui:/opt/frontosa-ui -t frontosa-ui"
    ],
    "directories": [
        {
            "source": "$workspace/src",
            "destination": "/opt/frontosa-ui/src"
        }
    ],
    "files": [
        {
            "source": "$workspace/package.json",
            "destination": "/opt/frontosa-ui/package.json"
        },
        {
            "source": "$workspace/Dockerfile",
            "destination": "/docker-uploads/frontosa-ui/Dockerfile"
        }
    ]
}